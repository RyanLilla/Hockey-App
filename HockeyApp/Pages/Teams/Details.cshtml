@page "{id:int?}"
@model HockeyApp.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Team.TeamLocation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team.TeamLocation)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Team.Players)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Player Name</th>
                    <th>Position</th>
                </tr>
                @foreach (var item in Model.Team.Players)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Team.Coach)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Hired</th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Team.Coach.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Team.Coach.HireDate)
                    </td>
                </tr>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
